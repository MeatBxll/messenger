generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // or your DB type
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique 
  password String
  messages Message[]
}

model Message{
  id  Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  senderId Int
  sender User @relation(fields: [senderId], references: [id])
}